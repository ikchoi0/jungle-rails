<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end%>
  
  <div>
    <% disabled = product.quantity == 0 ? "disabled" : "" %>
    <% if product.quantity == 0 %>
      <button class="btn" style="background-color:red" disabled>
        Sold Out
      </button>
    <% end %>
    <%= button_to add_item_cart_path(product_id: product.id), class: "btn #{disabled}",
    method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %> 
    <% end %>
  </div>
</article>
